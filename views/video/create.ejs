<%- include('../partials/head') -%>

<div class="form-flex">
	<div class="container-form login-form">
		<%- include('../partials/messages') -%>
		<div class="heading">
			<h1>Create a Video</h1>
		</div>
		<form action="/video/create" method="post" enctype="multipart/form-data">
			<label for="title">Video Title</label>
			<input type="text" name="title" id="value" placeholder="Enter video title" />

			<label for="image">Upload Image</label>
			<input type="file" accept="image/*" name="image" id="image" required />

			<label for="video"></label>
			<input type="file" accept="video/*" name="video" id="video" required />

			<label for="password">Description</label>
			<textarea name="" id="" cols="30" rows="10"></textarea>
			<input type="submit" value="Login" />
		</form>
		<p>
			Forgot password? &nbsp; <a href="/auth/forgot-password">Reset Password</a>
		</p>
		<p>Don't have an account? &nbsp; <a href="/auth/register">Signup</a></p>
	</div>
</div>

<%- include('../partials/foot') -%>
